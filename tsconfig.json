{
	"compilerOptions": {
		"baseUrl": ".",
		"allowJs": false,
		"alwaysStrict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"sourceMap": true,
		"target": "es2020",
		"paths": {
			"src/*": ["src/*"],
			"lib/*": ["lib/*"]
		},
	},
	"include": [
		"src/**/*.ts",
		"lib/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}